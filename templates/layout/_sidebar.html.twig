<div class="sidebar">
    <div class="text-center mb-4">
        <i class="fas fa-hospital-alt fa-3x mb-3"></i>
        <h4>Cabinet Médical</h4>
        <small>{{ app.user.prenom }} {{ app.user.nom }}</small>
        <div class="mt-2">
            {% if is_granted('ROLE_ADMIN') %}
                <span class="badge bg-danger">Administrateur</span>
            {% elseif is_granted('ROLE_MEDECIN') %}
                <span class="badge bg-primary">Médecin</span>
            {% elseif is_granted('ROLE_SECRETAIRE') %}
                <span class="badge bg-success">Secrétaire</span>
            {% endif %}
        </div>
    </div>

    <nav class="nav flex-column">
        {% block sidebar_menu %}{% endblock %}
        
        <hr class="text-white mx-3">
        
        <a href="{{ path('app_logout') }}" class="nav-link">
            <i class="fas fa-sign-out-alt"></i> Déconnexion
        </a>
    </nav>
</div>