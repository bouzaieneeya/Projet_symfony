{% extends 'base_with_sidebar.html.twig' %}

{% block title %}Gestion des Secrétaires{% endblock %}

{% block sidebar_menu %}
    <a href="{{ path('admin_dashboard') }}" class="nav-link">
        <i class="fas fa-tachometer-alt"></i> Dashboard
    </a>
    <a href="{{ path('admin_patients') }}" class="nav-link">
        <i class="fas fa-users"></i> Patients
    </a>
    <a href="{{ path('admin_medecins') }}" class="nav-link">
        <i class="fas fa-user-md"></i> Médecins
    </a>
    <a href="{{ path('admin_secretaires') }}" class="nav-link active">
        <i class="fas fa-user-tie"></i> Secrétaires
    </a>
{% endblock %}

{% block body %}
<div class="main-content">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1><i class="fas fa-user-tie"></i> Gestion des Secrétaires</h1>
        {# ✅ FIXED: Changed to proper link #}
        <a href="{{ path('admin_secretaires_new') }}" class="btn btn-primary">
            <i class="fas fa-plus"></i> Nouvelle Secrétaire
        </a>
    </div>

    {# ✅ FIXED: Added success messages #}
    {% for message in app.flashes('success') %}
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle"></i> {{ message }}
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    {% endfor %}

    {% for message in app.flashes('error') %}
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-circle"></i> {{ message }}
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    {% endfor %}

    <div class="card">
        <div class="card-header">
            <i class="fas fa-list"></i> Liste des Secrétaires ({{ secretaires|length }})
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Nom</th>
                            <th>Prénom</th>
                            <th>Téléphone</th>
                            <th>Email</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for secretaire in secretaires %}
                        <tr>
                            <td>{{ secretaire.id }}</td>
                            <td>{{ secretaire.nom }}</td>
                            <td>{{ secretaire.prenom }}</td>
                            <td><i class="fas fa-phone text-primary"></i> {{ secretaire.telephone }}</td>
                            <td><i class="fas fa-envelope text-info"></i> {{ secretaire.email }}</td>
                            <td>
                                {# ✅ FIXED: Proper action links #}
                                <a href="{{ path('admin_secretaires_edit', {id: secretaire.id}) }}" 
                                   class="btn btn-sm btn-warning" 
                                   title="Modifier">
                                    <i class="fas fa-edit"></i>
                                </a>
                                {# ✅ FIXED: Proper delete form with CSRF token #}
                                <form method="post" 
                                      action="{{ path('admin_secretaires_delete', {id: secretaire.id}) }}" 
                                      style="display: inline-block;" 
                                      onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette secrétaire ?');">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ secretaire.id) }}">
                                    <button type="submit" class="btn btn-sm btn-danger" title="Supprimer">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </form>
                            </td>
                        </tr>
                        {% else %}
                        <tr>
                            <td colspan="6" class="text-center text-muted py-4">
                                <i class="fas fa-inbox fa-3x mb-3 d-block"></i>
                                Aucune secrétaire enregistrée. Cliquez sur "Nouvelle Secrétaire" pour commencer.
                            </td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
{% endblock %}