{% extends 'base.html.twig' %}

{% block title %}Dashboard Médecin{% endblock %}

{% block body %}
{% include 'layout/_sidebar.html.twig' %}

{% block sidebar_menu %}
    <a href="{{ path('medecin_dashboard') }}" class="nav-link active">
        <i class="fas fa-tachometer-alt"></i> Dashboard
    </a>
    <a href="{{ path('medecin_rendez_vous') }}" class="nav-link">
        <i class="fas fa-calendar-alt"></i> Rendez-vous
    </a>
    <a href="{{ path('medecin_consultations') }}" class="nav-link">
        <i class="fas fa-stethoscope"></i> Consultations
    </a>
{% endblock %}

<div class="main-content">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1><i class="fas fa-user-md"></i> Dashboard Médecin</h1>
        <div>
            <span class="text-muted">Dr. {{ medecin.nom }} {{ medecin.prenom }}</span>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <i class="fas fa-calendar-alt"></i> Rendez-vous du jour
                </div>
                <div class="card-body">
                    {% if rendezVous|length > 0 %}
                    <div class="list-group">
                        {% for rdv in rendezVous|slice(0, 5) %}
                        <div class="list-group-item">
                            <div class="d-flex justify-content-between">
                                <h6 class="mb-1">{{ rdv.patient.nom }} {{ rdv.patient.prenom }}</h6>
                                <small>{{ rdv.heure|date('H:i') }}</small>
                            </div>
                            <p class="mb-1">
                                <span class="badge bg-{{ rdv.statut == 'confirmé' ? 'success' : 'warning' }}">
                                    {{ rdv.statut }}
                                </span>
                            </p>
                        </div>
                        {% endfor %}
                    </div>
                    {% else %}
                    <p class="text-center text-muted">Aucun rendez-vous aujourd'hui</p>
                    {% endif %}
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-success text-white">
                    <i class="fas fa-stethoscope"></i> Dernières Consultations
                </div>
                <div class="card-body">
                    {% if consultations|length > 0 %}
                    <div class="list-group">
                        {% for consultation in consultations %}
                        <div class="list-group-item">
                            <div class="d-flex justify-content-between">
                                <h6 class="mb-1">{{ consultation.patient.nom }} {{ consultation.patient.prenom }}</h6>
                                <small>{{ consultation.dateConsultation|date('d/m/Y') }}</small>
                            </div>
                            <p class="mb-0"><small>{{ consultation.diagnostic|slice(0, 50) }}...</small></p>
                        </div>
                        {% endfor %}
                    </div>
                    {% else %}
                    <p class="text-center text-muted">Aucune consultation récente</p>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}