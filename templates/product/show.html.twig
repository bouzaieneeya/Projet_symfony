{% extends 'base.html.twig' %}

{% block title %}{{ product.libelle }}{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h2 class="mb-0">{{ product.libelle }}</h2>
                </div>
                <div class="card-body">
                    <p class="card-text">
                        <strong>Prix :</strong> {{ product.price }} €
                    </p>
                </div>
                <div class="card-footer text-end">
                 <a href="{{ path('product_index') }}" class="btn btn-secondary">
    Retour à la liste
</a>
                    <a href="{{ path('product_edit', {'id': product.id}) }}" class="btn btn-warning">
                        Modifier
                    </a>

                    {{ include('product/_delete_form.html.twig') }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}