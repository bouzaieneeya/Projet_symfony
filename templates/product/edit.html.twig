{% extends 'base.html.twig' %}

{% block title %}{{ title|default('Nouveau produit') }}{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-md-6">
            <h1>{{ title|default('Ajouter un produit') }}</h1>

            {{ form_start(form, {'attr': {'class': 'mt-4'}}) }}
                <div class="mb-3">
                    {{ form_label(form.libelle) }}
                    {{ form_widget(form.libelle, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.libelle) }}
                </div>

                <div class="mb-3">
                    {{ form_label(form.price) }}
                    {{ form_widget(form.price, {'attr': {'class': 'form-control', 'step': '0.01'}}) }}
                    {{ form_errors(form.price) }}
                </div>

                <button type="submit" class="btn btn-success">
                    {{ title|default('Créer') }}
                </button>
            {{ form_end(form) }}

     <a href="{{ path('product_index') }}" class="btn btn-secondary mt-3">
    Retour à la liste
</a>
        </div>
    </div>
{% endblock %}